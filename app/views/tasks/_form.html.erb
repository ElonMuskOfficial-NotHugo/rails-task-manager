<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="col-md-6">
    <h1 class="text-center mb-4">Task Form</h1>
    <%= form_with model: @task, local: true, html: { class: 'form' } do |f| %>
      <div class="form-group mb-4">
        <%= f.label :title, class: 'control-label' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group mb-4">
        <%= f.label :details, class: 'control-label' %>
        <%= f.text_field :details, class: 'form-control' %>
      </div>

      <div class="form-group form-check mb-4">
        <%= f.check_box :completed, class: 'form-check-input' %>
        <%= f.label :completed, class: 'form-check-label' %>
      </div>

      <div class="text-center">
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
