<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2><%= @task.title %></h2>
      <p><%= @task.details %></p>
      <div class="form-check">
        <input type="checkbox" class="form-check-input" <%= @task[:completed] ? 'checked' : '' %> disabled>
        <label class="form-check-label" for="completed">Completed</label>
      </div>
      <div class="mt-3">
        <%= link_to '+ Edit this task', edit_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
